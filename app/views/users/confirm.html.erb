<h2>
  Sing Up Confirmation</h2>

<div class="row">
  <div class="col-md-4">
    <h4>Are you shure these values are correct?</h4>
    <h5>Email:
      <%= @user.email %>
    </h5>
    <h5>Name:
      <%= @user.name %>
    </h5>
  </div>
</div>

<div class="row-fluid">
  <div class="col-md-4" , style="width: auto;">
    <%= button_to "Yes", {controller: "users", action: "create", params: params[:user].permit([:name, :email, :password, :password_confirmation]).to_h}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-4" , style="width: auto;">
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-default', :method => :get %>
  </div>
</div>
